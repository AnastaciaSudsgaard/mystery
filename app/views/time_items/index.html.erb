<h1>Listing time_items</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Completed</th>
    <th>Completed at</th>
    <th>Time list</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @time_items.each do |time_item| %>
  <tr>
    <td><%= time_item.description %></td>
    <td><%= time_item.completed %></td>
    <td><%= time_item.completed_at %></td>
    <td><%= time_item.time_list %></td>
    <td><%= link_to 'Show', [time_item.time_list, time_item] %></td>
    <td><%= link_to 'Edit', edit_time_list_time_item_path(time_item.time_list, time_item) %></td>
    <td><%= link_to 'Destroy', [time_item.time_list, time_item], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

